<Window x:Class="dem.Windows.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dem.Windows"
        mc:Ignorable="d"
        Title="ChangePassword" Height="300" Width="330" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Label Content="Старый пароль" HorizontalAlignment="Left" Margin="76,69,0,0" VerticalAlignment="Top"/>
        <Label Content="Новый пароль" HorizontalAlignment="Left" Margin="76,100,0,0" VerticalAlignment="Top"/>
        <Label Content="Подтверждение" HorizontalAlignment="Left" Margin="75,142,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TbOldPassword" HorizontalAlignment="Left" Margin="180,73,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TbNewPassword" HorizontalAlignment="Left" Margin="180,104,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TbConfirmPassword" HorizontalAlignment="Left" Margin="180,146,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="BtnEditPassword" Content="Изменить" HorizontalAlignment="Center" Margin="0,199,0,0" VerticalAlignment="Top" Width="178" Click="BtnEditPassword_Click"/>
    </Grid>
</Window>
