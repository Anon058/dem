<Window x:Class="dem.Windows.EditUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dem.Windows"
        mc:Ignorable="d"
        Title="Редактирование пользователя" Height="422" Width="402">
    <Grid>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="65,88,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TbLogin" HorizontalAlignment="Left" Margin="162,92,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="145"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="65,119,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TbPassword" HorizontalAlignment="Left" Margin="162,123,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="145"/>
        <Label Content="Роль" HorizontalAlignment="Left" Margin="65,150,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="CmbxRole" HorizontalAlignment="Left" Margin="162,154,0,0" VerticalAlignment="Top" Width="145"/>
        <Label Content="Дата последнего входа" HorizontalAlignment="Left" Margin="65,190,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="DtpLastLoginDate" HorizontalAlignment="Left" Margin="207,191,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="ChkvxPasswordChanged" Content="Пароль изменен" HorizontalAlignment="Left" Margin="65,229,0,0" VerticalAlignment="Top"/>
        <Button x:Name="BtnEditUser" Content="Изменить" HorizontalAlignment="Left" Margin="162,280,0,0" VerticalAlignment="Top" Click="BtnEditUser_Click"/>

    </Grid>
</Window>
