<Page x:Class="dem.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:dem.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="DtGrid" DataContext="{Binding}"/>
        <Button x:Name="BtnAddUser" Content="Добавить" HorizontalAlignment="Left" Margin="38,24,0,0" Grid.Row="1" VerticalAlignment="Top" Height="47" Width="160" Click="BtnAddUser_Click"/>
        <Button x:Name="BtnEditUser" Content="Редактировать" HorizontalAlignment="Left" Margin="240,24,0,0" Grid.Row="1" VerticalAlignment="Top" Height="47" Width="160" Click="BtnEditUser_Click"/>
        <Button x:Name="BtnDeleteUser" Content="Удалить" HorizontalAlignment="Left" Margin="602,24,0,0" Grid.Row="1" VerticalAlignment="Top" Height="47" Width="160" Click="BtnDeleteUser_Click"/>

    </Grid>
</Page>
